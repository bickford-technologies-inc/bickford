{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "emitDeclarationOnly": false,
    "declarationMap": false,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "stripInternal": true,
    "noEmitOnError": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.test.ts", "**/*.spec.ts"]
}
