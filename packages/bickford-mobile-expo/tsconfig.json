{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": false,
    "declaration": false,
    "outDir": "dist",
    "jsx": "react-native",
    "skipLibCheck": true,
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": ["node"]
  },
  "include": [
    "App.tsx",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "ios",
    "android"
  ]
}