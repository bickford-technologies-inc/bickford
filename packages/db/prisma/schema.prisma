generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LedgerEntry {
  id        String   @id
  intent    Json
  decision  Json
  hash      String
  createdAt DateTime @default(now())
  tenantId  String?

  @@index([createdAt])
  @@index([tenantId])
}

model AgentState {
  agentId     String   @id
  ttvBaseline Float
  updatedAt   DateTime @updatedAt
}

model BuildEvent {
  id          String    @id
  commitSha   String
  branch      String
  status      String
  startedAt   DateTime  @default(now())
  completedAt DateTime?
  ledgerHash  String?
  artifacts   Json?
  buildId     String? // Added for buildId support
}

model DeployEvent {
  id        String   @id @default(uuid())
  buildId   String
  createdAt DateTime @default(now())
}

model ChatThread {
  id             String        @id @default(cuid())
  createdAt      DateTime      @default(now())
  sealedAt       DateTime?
  finalized      Boolean       @default(false)
  lastReplayedAt DateTime?
  messages       ChatMessage[]

  @@index([sealedAt])
  @@index([finalized])
  @@map("ChatThread")
}

model ChatMessage {
  id        String     @id @default(cuid())
  author    ChatAuthor
  text      String
  createdAt DateTime   @default(now())
  resolution ChatResolution @default(CAPTURED)

  // ─────────────────────────────────────────────
  // Relations required by existing canon models
  // ─────────────────────────────────────────────

  // ChatThread.messages
  threadId String?
  thread   ChatThread? @relation(fields: [threadId], references: [id])

  // CanonEntry.messages
  canonEntryId String?
  canonEntry   CanonEntry? @relation(fields: [canonEntryId], references: [id])

  // Intent.sourceMessage
  intent Intent? @relation("MessageIntent")

  @@index([createdAt])
  @@index([threadId])
  @@index([canonEntryId])
}

model Intent {
  id              String              @id @default(cuid())
  createdAt       DateTime            @default(now())
  sourceMessageId String              @unique
  sourceMessage   ChatMessage         @relation("MessageIntent", fields: [sourceMessageId], references: [id])
  intentType      IntentType
  goal            String
  constraints     String[]
  admissibility   AdmissibilityStatus
  denialReason    String?
  execution       Execution?
}

model Execution {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  intentId String @unique
  intent   Intent @relation(fields: [intentId], references: [id])

  status    ExecutionStatus
  artifacts String[]

  executionContextHash String?
  tokenBuffer          Json?
}

model CanonEntry {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  kind       String
  title      String
  content    String
  provenance Json?

  messages ChatMessage[]
}

model DeniedDecision {
  id                   String   @id @default(cuid())
  ts                   DateTime
  actionId             String
  actionName           String?
  tenantId             String
  goal                 String?
  reasonCodes          String[]
  missingCanonIds      String[]
  violatedInvariantIds String[]
  requiredCanonRefs    String[]
  message              String
  context              Json?
  optrRunId            String?
  createdAt            DateTime @default(now())
}

enum ChatAuthor {
  USER
  BICKFORD
}

enum ChatResolution {
  CAPTURED
  DENIED
  EXECUTING
  REALIZED
}

enum IntentType {
  OBSERVE
  QUERY
  CHANGE
  AUTOMATE
}

enum AdmissibilityStatus {
  PENDING
  ALLOWED
  DENIED
}

enum ExecutionStatus {
  QUEUED
  RUNNING
  FAILED
  SUCCEEDED
}

model Meta {
  id            Int @id @default(1)
  schemaVersion Int
}
