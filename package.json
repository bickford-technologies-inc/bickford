{
  "name": "bickford",
  "private": true,
  "packageManager": "pnpm@10.28.0",
  "workspaces": [
    "packages/web-ui",
    "packages/execution-convergence",
    "packages/ledger",
    "packages/types"
  ],
  "scripts": {
    "setup": "node scripts/setup.mjs",
    "install:all": "npm install",
    "dev": "node scripts/dev-stack.mjs",
    "dev:api": "pnpm --filter bickford-backend dev",
    "dev:web": "pnpm --filter @bickford/web-ui dev",
    "dev:mobile": "pnpm --filter bickford-mobile-ui dev",
    "detect:promotions": "node scripts/detect-promotions.mjs",
    "promote": "node scripts/promote-package.mjs",
    "preflight": "node scripts/assert-declared-deps.mjs && node scripts/require-optr-exports.mjs",
    "canon:enforce": "node scripts/enforce-deprecation-windows.mjs",
    "canon:viz": "node scripts/render-canon-drift.mjs",
    "preinstall": "node scripts/assert-lockfile.mjs",
    "prebuild": "node scripts/assert-no-phantom-workspace-deps.mjs && node scripts/assert-no-sdk-domain-imports.mjs && node scripts/assert-node.mjs && node scripts/assert-vercel-project.mjs && node scripts/check-chat-design-lock.mjs && node scripts/generate-exec-ttv-report.mjs && bash ci/guards/EXECUTION_AUTHORITY_GUARD.sh && bash ci/guards/ENVIRONMENT_PRECONDITION.sh",
    "build:types": "pnpm --filter @bickford/types build",
    "build:ledger": "pnpm --filter @bickford/ledger build",
    "build": "pnpm run build:types && pnpm run build:ledger && pnpm run prebuild && pnpm run realize-intent && node scripts/assert-intent-phase.mjs && next build",
    "start": "bun run app/server.ts",
    "check:resolution": "node scripts/check-workspace-resolution.mjs",
    "build:all": "node scripts/build-all.mjs",
    "canon:bump": "node scripts/bump-canon-version.mjs",
    "canon:confidence": "node scripts/invariant-confidence.mjs",
    "canon:propagate": "node scripts/ci-propagate-canon.mjs",
    "canon": "node scripts/canonctl.mjs",
    "canon:migrate": "node scripts/canonctl.mjs migrate",
    "canon:deprecations": "node scripts/canonctl.mjs enforce-deprecations",
    "canon:dag": "node scripts/canonctl.mjs render-dag",
    "canon:blast": "node scripts/invariants/blast-radius-score.mjs",
    "canon:gate": "node scripts/promote-with-gate.mjs",
    "canon:pressure": "node scripts/render-invariant-pressure.mjs",
    "canon:remediate": "node scripts/auto-remediation-pr.mjs",
    "canon:ml:extract": "node scripts/ml/extract-features.mjs",
    "canon:ml:train": "node scripts/ml/train-online.mjs",
    "canon:ml:predict": "node scripts/ml/predict-failure.mjs",
    "canon:patch:generate": "node scripts/generate-auto-patch.mjs",
    "canon:patch:pr": "node scripts/open-auto-patch-pr.mjs",
    "canon:maintain": "node scripts/canon-predictive-maintenance.mjs",
    "canon:pressure:emit": "node scripts/emit-invariant-pressure.mjs",
    "canon:remediate:queue": "node scripts/build-remediation-queue.mjs",
    "canon:exec:report": "node scripts/generate-exec-ttv-report.mjs",
    "canon:compare:tenant": "node scripts/compare-tenant-baseline.mjs",
    "realize-intent": "node scripts/realize-intent.mjs",
    "capture:ui": "node scripts/capture-ui.mjs",
    "assert:vercel-binding": "tsx scripts/assert-vercel-binding.ts",
    "bickford:realize": "node scripts/bickford-realize.mjs",
    "benchmark:gaps": "node scripts/benchmark-gaps.mjs"
  },
  "bin": {
    "bickford": "./scripts/bickford-realize.mjs"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@playwright/test": "^1.58.0",
    "@prisma/client": "6.19.2",
    "@sendgrid/mail": "^8.1.6",
    "ai": "^6.0.44",
    "ajv": "^8.17.1",
    "better-sqlite3": "^12.6.2",
    "glob": "^13.0.0",
    "pdf-lib": "^1.17.1",
    "prisma": "6.19.2",
    "stripe": "^20.2.0"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.28.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "^1.3.6",
    "@types/node": "25.0.9",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "next": "14.2.35",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "tsx": "^4.7.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": "20.x"
  }
}
