{
  "name": "bickford",
  "private": true,
  "packageManager": "pnpm@10.0.0",
  "workspaces": [
    "packages/web-ui",
    "packages/execution-convergence",
    "packages/ledger",
    "packages/types"
  ],
  "scripts": {
    "detect:promotions": "node scripts/detect-promotions.mjs",
    "promote": "node scripts/promote-package.mjs",
    "preflight": "node scripts/enforce-pnpm.mjs && node scripts/require-tsc.mjs && node scripts/check-canonical-types.mjs && node scripts/preflight-check.mjs",
    "build": "pnpm -r --filter @bickford/* build",
    "check:resolution": "bash scripts/check-workspace-resolution.sh",
    "build:all": "bash scripts/build-all.sh"
  },
  "devDependencies": {
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@types/node": "25.0.9",
    "next": "14.2.5",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": "20.x"
  }
}
