{
  "framework": "nextjs",
  "rootDirectory": "packages/web-ui",
  "installCommand": "pnpm install",
  "buildCommand": "cd packages/web-ui && pnpm run build",
  "env": {
    "NODE_ENV": "production"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
