{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["node", "pnpmLock", "routing", "prisma"],
  "additionalProperties": false,
  "properties": {
    "node": { "type": "string" },
    "pnpmLock": { "enum": ["immutable"] },
    "routing": { "enum": ["app-only"] },
    "prisma": {
      "type": "object",
      "required": ["runtimeExport", "typeExport", "lifecycle"],
      "additionalProperties": false,
      "properties": {
        "runtimeExport": { "type": "string" },
        "typeExport": { "type": "string" },
        "lifecycle": {
          "type": "array",
          "items": { "enum": ["postinstall", "prebuild"] }
        }
      }
    }
  }
}
