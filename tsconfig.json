{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "incremental": false,
    "allowJs": true,
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@bickford/ledger": [
        "packages/ledger/dist/index.js",
        "packages/ledger/src/index.ts"
      ],
      "@bickford/ledger/prismaLedger": [
        "packages/ledger/dist/prismaLedger.js",
        "packages/ledger/src/prismaLedger.ts"
      ],
      "@bickford/types": [
        "packages/types/dist/index.d.ts",
        "packages/types/src/index.ts"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "adapters/**",
    "apps/**",
    "packages/**",
    "scripts/**",
    "ci/**",
    "tests/**"
  ]
}
