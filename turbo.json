{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "outputs": [
        "apps/web/.next/**",
        "packages/canon/dist/**",
        "packages/db/dist/**",
        "packages/types/dist/**",
        "packages/optr/dist/**",
        "packages/authority/dist/**",
        "packages/session-completion/dist/**",
        "packages/session-completion-runtime/dist/**",
        "packages/ledger/dist/**",
        "packages/core/dist/**",
        "packages/ui/dist/**",
        "packages/demo-dashboard/dist/**"
      ]
    },
    "clean": {
      "outputs": []
    },
    "db:generate": {
      "outputs": ["packages/db/node_modules/.prisma/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "DATABASE_URL",
        "NODE_ENV"
      ]
    },
    "test": {
      "outputs": ["coverage/**"],
      "env": [
        "DATABASE_URL",
        "NODE_ENV",
        "CI"
      ]
    },
    "prisma:generate": {},
    "prebuild": {
      "outputs": []
    }
  },
  "globalEnv": [
    "DATABASE_URL",
    "OPENAI_API_KEY",
    "ANTHROPIC_API_KEY",
    "NODE_ENV",
    "VERCEL",
    "CI",
    "NEXT_RUNTIME",
    "VERCEL_EDGE",
    "BICKFORD_API_TOKEN",
    "GITHUB_TOKEN",
    "PG_SSL"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    }
  }
}
