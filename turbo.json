{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "*.tsbuildinfo"],
      "env": [
        "DATABASE_URL",
        "NODE_ENV",
        "VERCEL",
        "CI",
        "NEXT_RUNTIME"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "DATABASE_URL",
        "NODE_ENV"
      ]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "env": [
        "DATABASE_URL",
        "NODE_ENV",
        "CI"
      ]
    },
    "prisma:generate": {},
    "prebuild": {
      "dependsOn": ["^build"],
      "outputs": []
    }
  },
  "globalEnv": [
    "DATABASE_URL",
    "OPENAI_API_KEY",
    "ANTHROPIC_API_KEY",
    "NODE_ENV",
    "VERCEL",
    "CI",
    "NEXT_RUNTIME",
    "VERCEL_EDGE",
    "BICKFORD_API_TOKEN",
    "GITHUB_TOKEN",
    "PG_SSL"
  ]
}
